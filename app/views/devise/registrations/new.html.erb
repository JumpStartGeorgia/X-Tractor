<%- model_class = User -%>
<%- explanation = false if explanation.nil? -%>
<% title t('helpers.links.sign_up_title', :app_name => t("app.common.#{@app_key_name}.app_name")) %> 

<div id="signup-form">
  <div class="red-box"><%= (!@flags[0] ? t('helpers.links.sign_up2') : t('helpers.links.download')) %></div>
  <div class="red-box-neighbor">
  <%- if controller_name != 'sessions' %>
        <%= link_to t('helpers.links.sign_in'), new_session_path(resource_name), :class => 'sign-in-link reattach ' %>
     <% end -%>    
  </div>
  <% if explanation %>
    <div class="explanation"><%= t('helpers.links.explanation') %></div> 
  <% end %>
  

  <%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:"data-form-id"=>"signup-form"}) do |f| %>
  	<%= f.error_messages %>
	  <%= f.inputs do %>
      <%= render :partial => 'devise/registrations/new', :locals => { f: f, resource: resource } %>
    <% end %>

	  <div class="control-group submit-row">
		  <%= f.submit (!@flags[0] ? t('helpers.links.sign_up2') : t('helpers.links.download')), :class => 'btn btn-default sign-up', :'data-text-swap' => t('helpers.links.download_and_sign_up') %>
	  </div>
  <% end %>


</div>

