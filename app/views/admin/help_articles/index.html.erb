<%- model_class = HelpArticle -%>
<% title t '.title', :default => model_class.model_name.human(:count => 2) %>

<div class="form-group form-group-admin-buttons">

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_help_article_path,
              :class => 'btn btn-primary' %>

  <%= link_to t('helpers.links.admin'),
              admin_path,
              :class => 'btn btn-default' %>

</div>


<table class="table table-striped display">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:article_type) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @help_articles.each do |help_article| %>
      <tr>
        <td>
          <%= link_to help_article.title,
                      admin_help_article_path(help_article) %>
        </td>
        <td>
          <%= help_article.article_type_name %>
        </td>
        <td>
          <%= link_to '',
                      edit_admin_help_article_path(help_article),
                      :title => t('helpers.links.edit'),
                      :class => 'btn btn-xs btn-edit' %>
          <%= link_to '',
                      admin_help_article_path(help_article),
                      :title => t("helpers.links.destroy"),
                      :method => :delete,
                      :data => { :confirm => I18n.t("helpers.links.confirm") },
                      :class => 'btn btn-xs btn-delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
