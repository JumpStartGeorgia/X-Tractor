<%- model_class = HelpArticle -%>
<% title t '.title', :default => model_class.model_name.human %>

<div class="form-group form-group-admin-buttons">
  <%= link_to t('helpers.links.list'),
              admin_help_articles_path, :class => 'btn btn-default'  %>
  <%= link_to '',
              edit_admin_help_article_path(@help_article),
              :title => t('helpers.links.edit'),
              :class => 'btn btn-edit' %>
  <%= link_to '',
              admin_help_article_path(@help_article),
              :title => t("helpers.links.destroy"),
              :method => :delete,
							:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-delete' %>
	<%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn btn-default' %>
</div>

<p>
  <strong><%= model_class.human_attribute_name(:title) %>:</strong>
  <%= @help_article.title %>
</p>

<p>
  <strong><%= model_class.human_attribute_name(:public) %>:</strong>
  <%= @help_article.public %>
</p>

<% if @help_article.public %>
  <p>
    <strong><%= model_class.human_attribute_name(:public_at) %>:</strong>
    <%= @help_article.public_at %>
  </p>
<% end %>

<p>
  <strong><%= model_class.human_attribute_name(:article_type) %>:</strong>
  <%= @help_article.article_type %>
</p>

<div>
  <strong><%= model_class.human_attribute_name(:content) %>:</strong>
  <%= @help_article.content %>
</div>
